const { REACT_APP_URL_BACK } = process.env;

const fetchUserMail = async (email) => {
  try {
    const response = await fetch(`${REACT_APP_URL_BACK}/email`, {
      method: "POST",
      headers: {
        accept: "application/json",
        "content-type": "application/json",
      },
      body: JSON.stringify({ email }),
    });
    const res = await response.json();
    return res.success;
  } catch (error) {
    console.error(error);
    return false;
  }
};

export default fetchUserMail;
