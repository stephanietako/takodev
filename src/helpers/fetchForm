const { REACT_APP_URL_BACK } = process.env;

const fetchForm = async (name, lastname, email, message) => {
  try {
    const response = await fetch(`${REACT_APP_URL_BACK}/contact`, {
      method: "POST",
      headers: {
        accept: "application/json",
        "content-type": "application/json",
      },
      body: JSON.stringify({ name, lastname, email, message }),
    });
    const res = await response.json();
    return res.success;
  } catch (error) {
    console.error(error);
    return false;
  }
};

export default fetchForm;
